@model EntityLayer.Concrete.AddBook

@{
    ViewData["Title"] = "Kitap Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />

<center>
    <h2 style="color: #936231;">Kitap Ekleme Sayfası</h2>
</center>

<br />

<form class="form-group" asp-action="AddBook" asp-controller="Book" method="post" enctype="multipart/form-data">

    @Html.HiddenFor(x => x.BookID)

    <label>Kitap</label>
    @Html.TextBoxFor(x => x.BookName, new { @class = "form-control" })
    <br />
    <label>Yazar</label>
    @Html.DropDownListFor(x => x.AuthorID, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })
    <br />
    <label>Sayfa</label>
    @Html.TextBoxFor(x => x.NumberOfBookPage, new { @class = "form-control" })
    <br />
    <label>Kategori</label>
    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
    <br />
    <label>Durum</label>
    @Html.TextBoxFor(x => x.Status, new { @class = "form-control" })
    <br />
    <label>Fiyat</label>
    @Html.TextBoxFor(x => x.BookPrice, new { @class = "form-control" })
    <br />
    <label>Görsel</label>
    <input type="file" name="BookImage" />
    <br />
    <label>Açıklama</label>
    @Html.TextBoxFor(x => x.BookDescription, new { @class = "form-control" })
    <br />
    <br />
    <button class="btn btn-primary">Ürün Ekle</button>

</form>

