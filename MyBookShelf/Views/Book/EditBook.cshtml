@model EntityLayer.Concrete.Book

@{
    /**/

    ViewBag.Title = "BookDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />

<center>
    <h2 style="color: #936231;">Kitap Detayı</h2>
</center>

<br />

@using (Html.BeginForm("BookDetails", "Book", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(x => x.BookID)

    @Html.Label("Kitap")
    @Html.TextBoxFor(x => x.BookName, new { @class = "form-control" })
    <br />
    @Html.Label("Yazar")
    @Html.DropDownListFor(x => x.AuthorID, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })
    <br />
    @Html.Label("Sayfa")
    @Html.TextBoxFor(x => x.NumberOfBookPage, new { @class = "form-control" })
    <br />
    @Html.Label("Kategori")
    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
    <br />
    @Html.Label("Durum")
    @Html.TextBoxFor(x => x.Status, new { @class = "form-control" })
    <br />
    @Html.Label("Fiyat")
    @Html.TextBoxFor(x => x.BookPrice, new { @class = "form-control" })
    <br />
    <br />
    @Html.Label("Görsel")
    <input type="file" name="BookImage" />
    <br />
    <br />
    <br />
    @Html.Label("Açıklama")
    @Html.TextAreaFor(x => x.BookDescription, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Güncelle</button>
    <a href="/Book/PassiveBook/@Model.BookID/" class="btn btn-danger">Deaktif Et</a>
    <a href="/Book/ActiveBook/@Model.BookID/" class="btn btn-info">Aktif Et</a>
}