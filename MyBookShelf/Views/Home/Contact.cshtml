@using EntityLayer.Concrete
@model Contact

@{
    ViewData["Title"] = "İletişim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>

<head>
    @await Component.InvokeAsync("_ContactHeadPartial")
</head>

<body>
    <!-- Top banner -->
    <section class="fh5co-top-banner"></section>
    <!-- Top banner end -->

    <div class="contact1">
        <div class="container-contact1">
            <div class="contact1-pic js-tilt" data-tilt>
                <img src="~/dist/images/img-01.png" alt="IMG">
            </div>

            <form method="post" class="contact1-form validate-form">
                <span class="contact1-form-title">
                    İletişim Formu
                </span>

                <div class="wrap-input1 validate-input" data-validate="Ad Soyad Girmek Zorunludur.">
                    <input class="input1" type="text" name="NameSurname" placeholder="Ad Soyad">
                    <span class="shadow-input1"></span>
                </div>

                <div class="wrap-input1 validate-input" data-validate="Email Adresi Girmek Zorunludur. (ornek@gmail.com)">
                    <input class="input1" type="text" name="Mail" placeholder="Email">
                    <span class="shadow-input1"></span>
                </div>

                <div class="wrap-input1 validate-input" data-validate="Konu Girmek Zorunludur.">
                    <input class="input1" type="text" name="Subject" placeholder="Konu">
                    <span class="shadow-input1"></span>
                </div>

                <div class="wrap-input1 validate-input" data-validate="Mesaj Girmek Zorunludur.">
                    <textarea class="input1" name="Message" placeholder="Mesaj"></textarea>
                    <span class="shadow-input1"></span>
                </div>

                <div class="container-contact1-form-btn">
                    <button id="sendMessageButton" class="contact1-form-btn">
                        <span>
                            Gönder
                            <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
                        </span>
                    </button>
            </form>
        </div>
    </div>
    @await Component.InvokeAsync("_ContactScriptPartial")
</body>

</html>